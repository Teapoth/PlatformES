{% extends "ESAgendaBundle::layout.html.twig" %}

{% block title %}
	Supprimer un évènement - {{ parent() }}
{% endblock %}
 
{% block esagenda_body %}

  <h2>Supprimer un évènement</h2>

  <p>
	Êtes vous certain de vouloir supprmer l'évènement "{{ event.name }}" ?
  </p>

  <form action="{{ path('es_agenda_delete', {'id': event.id}) }}" method="post">
    <a href="{{ path('es_agenda_view', {'id': event.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'évènement
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}